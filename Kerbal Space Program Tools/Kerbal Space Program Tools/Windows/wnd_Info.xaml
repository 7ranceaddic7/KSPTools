<Window x:Class="Kerbal_Space_Program_Tools.Windows.wnd_Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kerbal_Space_Program_Tools.Windows"
        mc:Ignorable="d"
        Title="Info" Height="517.667" Width="503" ResizeMode="NoResize" Closed="Window_Closed" Activated="Window_Activated">
    <Window.Background>
        <ImageBrush ImageSource="/Kerbal Space Program Tools;component/Images/Planets/Tekto.png" Stretch="None"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="201*"/>
        </Grid.RowDefinitions>
        <Image Source="/Kerbal Space Program Tools;component/Images/Logo/kspLogo.png" />
        <Grid Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Rectangle Fill="#FF90D9FB" RadiusX="5" RadiusY="5" Opacity="0.6"/>
            <TextBlock x:Name="txtblInfo" TextWrapping="Wrap" Text="TextBlock"  TextAlignment="Center" Margin="3" FontSize="16"/>
        </Grid>
    </Grid>
</Window>
